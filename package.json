{
  "name": "stylus-extra",
  "version": "1.0.3",
  "description": "Wrap stylus to ease recursive file detection and watching",
  "main": "stylus-extra.js",
  "bin": "./stylus-extra.js",
  "scripts": {
    "pretty": "a_codestyle -i test",
    "commit": "git-cz",
    "test": "jest",
    "test-coverage": "jest --coverage",
    "release": "semantic-release"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run pretty"
    }
  },
  "homepage": "https://github.com/Alexgalinier/stylus-extra",
  "keywords": [
    "stylus",
    "watcher"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Alexgalinier/stylus-extra.git"
  },
  "bugs": {
    "url": "https://github.com/Alexgalinier/stylus-extra/issues"
  },
  "author": "Alexgalinier",
  "license": "MIT",
  "engines": {
    "node": ">=8"
  },
  "dependencies": {
    "chalk": "^2.3.2",
    "commander": "^2.15.1",
    "fs-extra": "^5.0.0",
    "glob": "^7.1.2",
    "sane": "^2.5.0",
    "stylus": "^0.54.5"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^3.0.1",
    "@semantic-release/git": "^4.0.2",
    "a_codestyle": "^3.0.0",
    "commitizen": "^2.9.6",
    "cz-conventional-changelog": "^2.1.0",
    "husky": "^0.15.0-rc.12",
    "jest": "^22.4.2",
    "semantic-release": "^15.1.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "watch.js"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "release": {
    "verifyConditions": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "prepare": [
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git"
    ],
    "publish": [
      "@semantic-release/github",
      "@semantic-release/npm"
    ]
  }
}
